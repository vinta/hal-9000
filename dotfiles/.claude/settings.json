{
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read(~/Projects/**)",
      "Write(~/Projects/**)",
      "Edit(~/Projects/**)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)",
      "Bash(git add:*)",
      "Bash(git mv:*)",
      "Bash(git rm:*)",
      "Bash(git apply:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "WebSearch",
      "Skill(commit)",
      "Skill(understand-codebase)",
      "Skill(update-allowed-tools)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Read(~/Library/**)",
      "Write(~/Library/**)",
      "Edit(~/Library/**)",
      "Read(~/Dropbox/**)",
      "Write(~/Dropbox/**)",
      "Edit(~/Dropbox/**)",
      "Read(//etc/**)",
      "Write(//etc/**)",
      "Edit(//etc/**)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      "Bash(passwd:*)",
      "Bash(history:*)",
      "Bash(rsync:*)",
      "Bash(sftp:*)",
      "Bash(socat:*)",
      "Bash(nc:*)",
      "Bash(ncat:*)",
      "Bash(netcat:*)",
      "Bash(nmap:*)",
      "Bash(eval:*)",
      "Bash(exec:*)",
      "Bash(security:*)",
      "Bash(defaults:*)",
      "Bash(launchctl:*)"
    ],
    "ask": [
      "Read(~/.*)",
      "Write(~/.*)",
      "Edit(~/.*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": ["~/.claude", "~/Projects"]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/.claude/statusline/run.py"
  },
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  }
}
