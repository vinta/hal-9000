{
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "cleanupPeriodDays": 365,
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read(~/Projects/**)",
      "Write(~/Projects/**)",
      "Edit(~/Projects/**)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)",
      "Bash(git add:*)",
      "Bash(git mv:*)",
      "Bash(git rm:*)",
      "Bash(git apply:*)",
      "Bash(git commit:*)",
      "Bash(git restore:*)",
      "Bash(git show:*)",
      "Bash(git rev-parse:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(mkdir:*)",
      "WebSearch",
      "Skill(magi)",
      "Skill(codex)",
      "Skill(gemini)",
      "Skill(commit)",
      "Skill(explore-codebase)",
      "Skill(update-allowed-tools)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Read(~/Library/**)",
      "Write(~/Library/**)",
      "Edit(~/Library/**)",
      "Read(~/Dropbox/**)",
      "Write(~/Dropbox/**)",
      "Edit(~/Dropbox/**)",
      "Read(//etc/**)",
      "Write(//etc/**)",
      "Edit(//etc/**)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      "Bash(passwd:*)",
      "Bash(history:*)",
      "Bash(rsync:*)",
      "Bash(sftp:*)",
      "Bash(socat:*)",
      "Bash(nc:*)",
      "Bash(ncat:*)",
      "Bash(netcat:*)",
      "Bash(nmap:*)",
      "Bash(eval:*)",
      "Bash(exec:*)",
      "Bash(security:*)",
      "Bash(defaults:*)",
      "Bash(launchctl:*)",
      "Bash(open:*)",
      "Bash(osascript:*)",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)",
      "Bash(diskutil:*)",
      "Bash(dscl:*)",
      "Bash(networksetup:*)",
      "Bash(scutil:*)",
      "Bash(systemsetup:*)",
      "Bash(pmset:*)",
      "Bash(xattr:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(chflags:*)",
      "Bash(ccp:*)"
    ],
    "ask": [
      "Read(~/.*)",
      "Write(~/.*)",
      "Edit(~/.*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": ["~/Projects", "/usr/local/hal-9000"]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/.claude/statusline/run.py"
  },
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "ask-questions-if-underspecified@trailofbits": true,
    "gh-cli@trailofbits": true,
    "modern-python@trailofbits": true
  }
}
