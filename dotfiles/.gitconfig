[user]
	name = Vinta
	email = vinta.chen@gmail.com

[push]
	default = simple

[color]
	ui = 1
	diff = auto
	status = auto
	branch = auto
	log = auto

[alias]
	branches = branch -a
	ci = commit
	co = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	remotes = remote -v
	st = status -sb
	tags = tag -l

[core]
	excludesfile = ~/.gitignore_global
	preloadindex = true
	ignorecase = false

[help]
	autocorrect = 1

[credential]
	helper = osxkeychain
